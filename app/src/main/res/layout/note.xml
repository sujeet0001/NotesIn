<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/d_black"
    android:orientation="vertical"
    android:padding="@dimen/d20"
    android:splitMotionEvents="false"
    tools:context=".activities.Note">

    <EditText
        android:id="@+id/no_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_white10"
        android:fontFamily="@font/bold"
        android:hint="@string/note_title"
        android:inputType="text"
        android:paddingStart="@dimen/d20"
        android:paddingTop="@dimen/d15"
        android:paddingEnd="@dimen/d20"
        android:paddingBottom="@dimen/d15"
        android:textColor="?attr/d_grey"
        android:textColorHint="?attr/d_x_white_25"
        android:textSize="@dimen/t18" />

    <EditText
        android:id="@+id/no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d15"
        android:layout_marginBottom="@dimen/d15"
        android:background="@drawable/rcs_white70"
        android:fontFamily="@font/regular"
        android:gravity="top"
        android:hint="@string/note_content"
        android:padding="@dimen/d20"
        android:layout_below="@id/no_title"
        android:layout_above="@id/no_save"
        android:textColor="?attr/d_grey"
        android:textColorHint="?attr/d_x_white_25"
        android:textSize="@dimen/t17" />

    <ImageButton
        android:id="@+id/no_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d15"
        android:padding="@dimen/d15"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_rc_white70"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/no_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_green"
        android:fontFamily="@font/bold"
        android:paddingTop="@dimen/d15"
        android:paddingBottom="@dimen/d15"
        android:text="@string/save"
        android:layout_toEndOf="@id/no_back"
        android:layout_toStartOf="@id/no_delete"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="?attr/d_black"
        android:textSize="@dimen/t18" />

    <ImageButton
        android:id="@+id/no_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/d12"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/d15"
        android:background="@drawable/btn_rc_red"
        app:srcCompat="@drawable/delete" />

</RelativeLayout>